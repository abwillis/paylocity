{
  "name": "paylocity_wrapper",
  "version": "1.0.0",
  "description": "Electron app that opens a paylocity",
  "author": "Andy Willis",
  "license": "BSD 3-Clause License",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win nsis"
  },
  "devDependencies": {
    "@electron-forge/maker-msix": "^7.11.1",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.paylocitywrapper",
    "productName": "Paylocity_Wrapper",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Paylocity Wrapper"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable-${arch}.${ext}"
    }
  }
  
{
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  }
}

}
